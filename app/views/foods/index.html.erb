<div id="app">
 <h1> Add a Food Item </h1>
  <div> 
    Name: <input type="text" v-model="newFoodName">
    Origin: <input type="text" v-model="newFoodOrigin">
    <button v-on:click="addFoodItem()"> Add Food </button>
  </div>

 <h4> Total number of Food Items: {{ foods.length }} </h4>

<div>
 Search by name: <input type="text" v-model="nameFilterbyName">
</div>
<div>
  Search by Place of Origin: <input type="text" v-model="nameFilterOrigin">
</div>

<div>
  <button v-on:click="setSortAttribute('name')">Order by Name</button>
  <button v-on:click="setSortAttribute('bio')">Order by Origin</button>
 </div>

  <table style="width:100%" border=1>
  <thead>
  <tr>
  <th> Name: </th>
  <th> Origin: </th>
  <th> Edit/Delete </th>
  </span>
  </tr>
  </thead>
  <tr v-for="fooditem in filteredFoods" >
    <th v-on:click="toggleOrigin(fooditem)"> {{ fooditem.name }} </th>
    <th v-bind:class="{strike: fooditem.origin}"> {{ fooditem.origin }} </th>
    <th> <button v-on:click="deleteFoodItem(fooditem)"> Delete </button> </th>
  </tr>
    
  </table>

 </div> 

